<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare a custom permission -->
    <permission android:name="com.mohammed.mohammedsaad.PERMISSION_RECEIVE_STOCK_INFO"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MohammedSaad_COMP304_HandsOn_Test2_W23"
        tools:targetApi="31">

        <activity
            android:name=".MohammedActivity"
            android:exported="true"
            android:theme="@style/Theme.MohammedSaad_COMP304_HandsOn_Test2_W23">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Protect the receiver with the custom permission -->
        <receiver
            android:name=".StockBroadcastReceiver"
            android:exported="true"
            android:permission="com.mohammed.mohammedsaad.PERMISSION_RECEIVE_STOCK_INFO">
            <intent-filter>
                <action android:name="com.mohammed.mohammedsaad.ACTION_STOCK_INFO" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
