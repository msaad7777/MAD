<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioButton
        android:id="@+id/symbolRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAPL (Apple Inc.)" />

    <RadioButton
        android:id="@+id/companyNameRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple Inc." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Stocks"
        android:onClick="insertStocks" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Stock Info"
        android:onClick="displayStockInfo" />

    <TextView
        android:id="@+id/stockInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Information"
        android:paddingTop="16dp" />
</LinearLayout>
